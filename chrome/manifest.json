{
    "manifest_version": 3,
    "name": "PLM UX Extensions",
    "version": "1.0",
    "description": "Adds PLM UX Extensions commands to the Fusion Manage standard user interface",
    "permissions": [
        "activeTab",
        "storage",
        "background"
    ],
    "action": {
        "default_popup" : "options.html",
        "default_icon"  : {
             "16" : "icon-16.png",
             "48" : "icon-48.png",
            "128" : "icon-128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [   
        // Adjust this list to match all the possible UX servers you may want to connect to
        "http://localhost:8080/*",
        "https://www.plm.tools:9300/*"
    ],
    "content_scripts": [{
        "matches": [
            "*://*.autodeskplm360.net/*"
        ],
        "js": [
            "content.js"
        ],
        "run_at": "document_start"
    }]
}