                                tr 
                                    td Source 
                                    td PRC-0001
                                    td PRC-0002
                                tr 
                                    td Consumption
                                    td 0/1
                                    td 0/1
                    #assembly-process
                        .assembly-panel-header Assembly Process
                        .assembly-panel-content.surface-level-2
