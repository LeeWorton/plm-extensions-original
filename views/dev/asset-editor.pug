extends ../framework/layout

block head
    
    link(rel='stylesheet', href='/stylesheets/dev/asset-editor.css')
    script(src='/javascripts/dev/asset-editor.js')
    script.
        config = !{JSON.stringify(config)};

block body

    body.surface-level-1.no-details

        #header.dark
            #header-logo
            #header-title= title
            #header-subtitle
            #header-toolbar
                #bom-sync.button.default.with-icon.icon-refresh Sync with EBOM
                #excel-export.button.with-icon.icon-download.disabled Download Excel
                #toggle-layout.button Toggle Layout
                #toggle-bom.button.with-toggle.toggle-on Display BOM
                #toggle-details.button.with-toggle.toggle-off Display Details
                #header-avatar
        
        #main.screen

            #bom.surface-level-2
            #details.surface-level-2
            #viewer.surface-level-1.viewer
            #contents.surface-level-1
                #tabs.tabs
                #items

            iframe#frame-download(name='frame-download' style="display:none")