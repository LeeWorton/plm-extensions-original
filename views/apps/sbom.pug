extends ../framework/layout

block head

    link(rel='stylesheet', href='/stylesheets/apps/sbom.css')
    script(src='/javascripts/apps/sbom.js')
    script.
        config = !{JSON.stringify(config)};

block body

    body.surface-level-1.text-selection-off.no-details

        #header.dark
            #header-logo
            #header-title= title
            #header-subtitle
            #header-toolbar
                .button#save.default Save Changes
                .button#toggle-viewer.with-toggle.toggle-on Toggle Viewer
                .button#toggle-details.with-toggle Toggle Details
                #header-avatar
        
        .screen

            #viewer.viewer.surface-level-1
            #bom.surface-level-1
            #panel.surface-level-2

                .tabs#tabs(data-tab-group="tab-group-main")
                    div#tab-services.with-icon.icon-service.selected(data-id='services') Services
                    div#tab-kits.with-icon.icon-product(data-id='kits') Kits
                    div#tab-parts.with-icon.icon-details(data-id='parts') Spare Parts

                .panel-content.tab-group-main#services.surface-level-2
                    .panel-actions 
                        #add-service-offering.button.default.with-icon.icon-create Service
                    .panel-content.groups#serivce-offerings
                .panel-content.tab-group-main.surface-level-2
                    .panel-actions 
                        #add-service-kit.button.default.with-icon.icon-create Kit
                    .panel-content.groups#kits
                .panel-content.tab-group-main#parts.surface-level-2
                    .panel-actions 
                        #filterSpareParts.button.icon.icon-3d
                        #add-all-recommended.button.with-icon.icon-list-add Add All Recommended
                    .panel-content.items-list.tiles.list.xs.surface-level-2#spare-parts

            #details.surface-level-1